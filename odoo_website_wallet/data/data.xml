<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="product_product_wallet" model="product.template">
			<field name="name">Point Recharge</field>
			<field name="website_published" eval="True"/>
			<field name="type">service</field>
			<field name="description_sale">Point Recharge</field>
			<field name="taxes_id" eval="False"/>
		</record>

		<record id="email_template_wallet_transaction_debit" model="mail.template">
			<field name="name">Customer Debit Point Transaction Email</field>
			<field name="email_from">{{user.email or user.email_formatted }}</field>
			<field name="subject">{{user.company_id.name}} Customer Debit Point Transaction Email</field>
			<field name="email_from">{{user.email or user.email_formatted or '' }}</field>
			<field name="lang">{{ object.partner_id.lang }}</field>
			<field name="model_id" ref="odoo_website_wallet.model_website_wallet_transaction"/>
			<field name="auto_delete" eval="True"/>
			<field name="body_html" type="html">
				<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
					<p>Dear
						<t t-if="object.partner_id.name">
							<t t-out="object.partner_id.name or ''"/>
						</t>,</p>
					<p>
						Point amount used in order.
					</p>
					<p>Amount :<t t-out="object.amount or ''"/> </p>
					<br/>
					Best Regards,
					<br/>
					<br/>
					<t t-out="user.name or ''"/>
					<br/>
					<br/>
					<br/>
				</div>

			</field>
		</record>

		<record id="email_template_wallet_transaction_credit" model="mail.template">
			<field name="name">Customer Credit Point Transaction Email</field>
			<field name="email_from">{{user.email or user.email_formatted }}</field>
			<field name="subject">{{user.company_id.name}} Customer Credit Point Transaction Email</field>
			<field name="email_to">{{user.email or user.email_formatted or ''}}</field>
			<field name="lang">{{ object.partner_id.lang }}</field>
			<field name="model_id" ref="odoo_website_wallet.model_website_wallet_transaction"/>
			<field name="auto_delete" eval="True"/>
			<field name="body_html" type="html">

				<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
					<p>Dear
						<t t-if="object.partner_id.name">
							<t t-out="object.partner_id.name or ''"/>
						</t>,</p>
					<p>
						Point Recharge Successfully done.
					</p>
					<p>Amount :<t t-out="object.amount or ''"/> </p>
					<br/>
					Best Regards,
					<br/>
					<br/>
					<t t-out="user.name or ''"/>
					<br/>
					<br/>
					<br/>
				</div>

			</field>
		</record>

