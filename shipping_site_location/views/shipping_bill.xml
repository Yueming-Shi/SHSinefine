<odoo>
    <record id="shipping_bill_form_view" model="ir.ui.view">
        <field name="name">shipping_bill_form_view</field>
        <field name="model">shipping.bill</field>
        <field name="inherit_id" ref="shipping_bills.shipping_bill_form"/>
        <field name="priority" eval="37"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='shipping_factor_id']" position="after">
                <field name="site_location_id"/>
            </xpath>
        </field>
    </record>

    <record id="shipping_bill_scan_code_form_view" model="ir.ui.view">
        <field name="name">shipping_bill_scan_code_form_view</field>
        <field name="model">shipping.bill</field>
        <field name="inherit_id" ref="shipping_bills.shipping_bill_from_scan_code"/>
        <field name="priority" eval="37"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='shipping_factor_id']" position="after">
                <field name="site_location_id"/>
            </xpath>
        </field>
    </record>


    <record id="shipping_bill_tree_scan_code" model="ir.ui.view">
        <field name="name">shipping_bill_tree_scan_code</field>
        <field name="model">shipping.bill</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree>
                <field name="out_date" readonly="1"/>
                <field name="logistics" readonly="1"/>
                <field name="tracking_no" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="sale_fetch_no" readonly="1"/>
                <field name="sale_partner_id" readonly="1"/>
                <field name="sale_site_id" readonly="1"/>
                <field name="signed_date"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>