<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipping_bill_form" model="ir.ui.view">
        <field name="name">shipping_bill_form</field>
        <field name="model">shipping.bill</field>
        <field name="inherit_id" ref="shipping_bills.shipping_bill_form"/>
        <field name="arch" type="xml">
            <field name="sale_site_contact_address" position="after">
                <field name="sale_order_line_ids">
                    <tree>
                        <field name="product_sale_category_id"/>
                        <field name="product_material_id"/>
                        <field name="product_brand_id"/>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

</odoo>
