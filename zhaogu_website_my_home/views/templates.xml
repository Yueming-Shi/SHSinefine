<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="link_to_frontend_portal" inherit_id="portal.user_dropdown" name="Link to frontend portal" priority="17">
    <xpath expr="//a[@class='dropdown-item']" position="replace">
      <a href="/my/personal/home" role="menuitem" class="dropdown-item">个人中心</a>
    </xpath>
  </template>

  <template id="haitao_website_my_home" name="个人中心">
    <t t-call="website.layout">
      <link type="text/css" rel="stylesheet" href="/zhaogu_website_my_home/static/src/css/style.css"/>
      <div class="m0myheader">
        <div class="conbox">
          <div class="conboxL">
            <img t-attf-src="/zhaogu_website_my_home/static/src/img/tx.png" class="tt"/>
            <div class="btR">
              <p class="p1"><span t-field="partner.name"/></p>
              <a href="/my/payment_method">
                <div class="v1">
                  <img t-attf-src="/zhaogu_website_my_home/static/src/img/mmm.png"/>
                  <p>管理付款方式 &gt;</p>
                </div>
              </a>
            </div>
          </div>
          <div class="conboxR">
            <a href="/my/account">设置</a>
          </div>
          <div class="clear"/>
        </div>
      </div>
      <div class="clear"/>

      <section class="s_carousel_wrapper" data-vxml="001" data-snippet="s_carousel" data-name="Carousel" t-if="banner['banner_top']">
        <div class="s_carousel s_carousel_default carousel slide" data-interval="4000" id="myCarousel1690255624440" style="background-image: none;">
          <ol class="carousel-indicators o_we_no_overlay">
            <li data-slide-to="0" data-target="#myCarousel1690255624440" class="active"/>
            <t t-foreach="range(len(banner['banner_top']) -1)" t-as="i">
              <li t-att-data-slide-to="i" data-target="#myCarousel1690255624440"/>
            </t>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item o_colored_level oe_img_bg o_bg_img_center pb0 pt0 active" data-name="Slide" data-original-title="" title="" aria-describedby="tooltip497698">
              <img style="width:100%;" t-attf-src="data:image/png;base64,{{banner['banner_top'][0].banner_img}}"/>
            </div>
            <t t-foreach="banner['banner_top'][1:]" t-as="line">
              <div class="carousel-item o_colored_level oe_img_bg o_bg_img_center pb0 pt0" data-name="Slide" data-original-title="" title="" aria-describedby="tooltip497698">
                <img style="width:100%;" t-attf-src="data:image/png;base64,{{line.banner_img}}"/>
              </div>
            </t>
          </div>
          <a class="carousel-control-prev o_not_editable o_we_no_overlay" data-slide="prev" role="img" aria-label="上一页" title="上一页" href="#myCarousel1690255624440">
            <span class="carousel-control-prev-icon"/>
            <span class="sr-only o_default_snippet_text">上一页</span>
          </a>
          <a class="carousel-control-next o_not_editable o_we_no_overlay" data-slide="next" role="img" aria-label="下一页" title="下一页" href="#myCarousel1690255624440">
            <span class="carousel-control-next-icon"/>
            <span class="sr-only o_default_snippet_text">下一页</span>
          </a>
        </div>
      </section>
      <br/>
      <div class="mypart1">
        <ul>
          <li>
            <a href="/shop/wishlist">
              <p class="p1"><span t-esc="len(wishlist)"/></p>
              <p class="p2">收藏</p>
            </a>
          </li>
          <li>
            <a href="/shop/wishlist">
              <p class="p1"><span t-esc="len(wishlist)"/></p>
              <p class="p2">订阅店铺</p>
            </a>
          </li>
          <li>
            <a href="/my/footprint">
              <p class="p1"><span t-esc="product_website_footprint_len"/></p>
              <p class="p2">足迹</p>
            </a>
          </li>
        </ul>
      </div>
      <div class="clear"/>
      <div class="mypart2">
        <div class="con">
          <div class="pa2_tit">
            <p>我的订单</p>
          </div>
          <ul>
            <li>
              <a href="/shop/cart">
                <div class="ddimg">
                  <img t-attf-src="/zhaogu_website_my_home/static/src/img/my02.png"/>
                </div>
                <p>待付款</p>
              </a>
            </li>
            <li>
              <a href="/my/order?type=dfh">
                <div class="ddimg">
                  <img t-attf-src="/zhaogu_website_my_home/static/src/img/my03.png"/>
                </div>
                <p>待发货</p>
              </a>
            </li>
            <li>
              <a href="/my/order?type=dsh">
                <div class="ddimg">
                  <img t-attf-src="/zhaogu_website_my_home/static/src/img/my04.png"/>
                </div>
                <p>待收货</p>
              </a>
            </li>
            <li>
              <a href="/my/evaluated">
                <div class="ddimg">
                  <img t-attf-src="/zhaogu_website_my_home/static/src/img/my05.png"/>
                </div>
                <p>待评价</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="kbox"/>
      <div class="kbox"/>
      <div class="clear"/>
      <div class="clear"/>
      <div class="kbox"/>
      <div class="kbox"/>
      <div class="clear"/>
      <section class="s_carousel_wrapper" data-vxml="001" data-snippet="s_carousel" data-name="Carousel" t-if="banner['banner_bottom']">
        <div class="s_carousel s_carousel_default carousel slide" data-interval="4000" id="myCarousel1690255624440" style="background-image: none;">
          <ol class="carousel-indicators o_we_no_overlay">
            <li data-slide-to="0" data-target="#myCarousel1690255624440" class="active"/>
            <t t-foreach="range(len(banner['banner_bottom']) -1)" t-as="i">
              <li t-att-data-slide-to="i" data-target="#myCarousel1690255624440"/>
            </t>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item o_colored_level oe_img_bg o_bg_img_center pb0 pt0 active" data-name="Slide" data-original-title="" title="" aria-describedby="tooltip497698">
              <img style="width:100%;" t-attf-src="data:image/png;base64,{{banner['banner_bottom'][0].banner_img}}"/>
            </div>
            <t t-foreach="banner['banner_bottom'][1:]" t-as="line">
              <div class="carousel-item o_colored_level oe_img_bg o_bg_img_center pb0 pt0" data-name="Slide" data-original-title="" title="" aria-describedby="tooltip497698">
                <img style="width:100%;" t-attf-src="data:image/png;base64,{{line.banner_img}}"/>
              </div>
            </t>
          </div>
          <a class="carousel-control-prev o_not_editable o_we_no_overlay" data-slide="prev" role="img" aria-label="上一页" title="上一页" href="#myCarousel1690255624440">
            <span class="carousel-control-prev-icon"/>
            <span class="sr-only o_default_snippet_text">上一页</span>
          </a>
          <a class="carousel-control-next o_not_editable o_we_no_overlay" data-slide="next" role="img" aria-label="下一页" title="下一页" href="#myCarousel1690255624440">
            <span class="carousel-control-next-icon"/>
            <span class="sr-only o_default_snippet_text">下一页</span>
          </a>
        </div>
      </section>
    </t>
  </template>

  <template id="my_footprint" name="足迹">
    <t t-call="website.layout">
      <link type="text/css" rel="stylesheet" href="/zhaogu_website_my_home/static/src/css/footprint.css"/>
      <div class="page">
        <div class="footprint">
          <h3 class="text-center">足迹</h3>
          <hr/>
          <ul>
            <t t-foreach="product_website_footprint.sorted(key=lambda ml: ml.visit_datetime, reverse=True)" t-as="line">
              <a t-attf-href="/shop/{{line.product_id.product_tmpl_id.id}}">
                <li>
                  <img t-attf-src="data:image/png;base64,{{line.product_id.image_1920}}"/>
                  <div>
                    <strong><p><span t-field="line.product_id.name"/></p></strong>
                    <p><span t-field="line.product_id.description_sale"/></p>
                    <br/>
                    <p class="mobile-access-date"><span t-field="line.visit_datetime"/></p>
                  </div>
                  <p class="access-date"><span t-field="line.visit_datetime"/></p>
                </li>
              </a>
            </t>
          </ul>
        </div>
      </div>
    </t>
  </template>

  <template id="my_shop_sale_order" name="我的订单">
    <t t-call="website.layout">
      <link type="text/css" rel="stylesheet" href="/zhaogu_website_my_home/static/src/css/shop_sale_order.css"/>
      <div class="page">
        <div class="order-div">
          <h3 class="text-center">我的订单（<span t-esc="type"/>）</h3>
          <hr/>
          <table>
            <thead>
                    <tr class="active">
                        <th>销售单号</th>
                        <th class="text-right">订单日期</th>
                        <th class="text-center"/>
                        <th class="text-right">金额</th>
                    </tr>
                </thead>
            <tbody>
              <t t-foreach="orders.sorted(key=lambda ml: ml.date_order, reverse=True)" t-as="order">
                    <tr>
                        <td><a t-att-href="order.get_portal_url()"><t t-esc="order.name"/></a></td>
                        <td class="text-right">
                            <span t-field="order.date_order" t-options="{'widget': 'date'}"/>&amp;nbsp;
                            <span class="d-none d-md-inline" t-field="order.date_order" t-options="{'time_only': True}"/>
                        </td>
                        <td class="text-center">
                            <span t-if="order.state == 'done'" class="badge badge-pill badge-success">
                                <i class="fa fa-fw fa-check" role="img" aria-label="Done" title="Done"/>Done
                            </span>
                        </td>
                        <td class="text-right"><span t-field="order.amount_total"/></td>
                    </tr>
                </t>
            </tbody>
          </table>
        </div>
      </div>
    </t>
  </template>

  <template id="my_be_evaluated_order" name="待评价">
    <t t-call="website.layout">
      <link type="text/css" rel="stylesheet" href="/zhaogu_website_my_home/static/src/css/footprint.css"/>
      <div class="page">
        <div class="footprint">
          <h3 class="text-center">待评价</h3>
          <hr/>
          <ul>
            <t t-foreach="product_ids.sorted(key=lambda ml: ml.create_date, reverse=True)" t-as="line">
              <a t-attf-href="/shop/{{line.product_id.product_tmpl_id.id}}">
                <li>
                  <img t-attf-src="data:image/png;base64,{{line.product_id.image_1920}}"/>
                  <div>
                    <strong><p><span t-field="line.product_id.name"/></p></strong>
                    <p><span t-field="line.product_id.description_sale"/></p>
                    <br/>
                    <p class="mobile-access-date"><span t-field="line.create_date"/></p>
                  </div>
                  <p class="access-date"><span t-field="line.create_date"/></p>
                </li>
              </a>
            </t>
          </ul>
        </div>
      </div>
    </t>
  </template>
</odoo>
