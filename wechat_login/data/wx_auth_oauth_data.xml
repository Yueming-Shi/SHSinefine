<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mobile_wx_provider" model="auth.oauth.provider">
            <field name="name">mobile_wx</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/oauth2/authorize</field>
            <field name="scope">snsapi_userinfo</field>
            <field name="validation_endpoint">https://api.weixin.qq.com/sns/oauth2/access_token</field>
            <field name="data_endpoint">https://api.weixin.qq.com/sns/userinfo</field>
            <field name="body">微信登录</field>
            <field name="enabled" eval="True"/>
        </record>

        <record id="pc_wx_provider" model="auth.oauth.provider">
            <field name="name">pc_wx</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/qrconnect</field>
            <field name="scope">snsapi_login</field>
            <field name="validation_endpoint">https://api.weixin.qq.com/sns/oauth2/access_token</field>
            <field name="data_endpoint">https://api.weixin.qq.com/sns/userinfo</field>
            <field name="body">微信登录</field>
            <field name="enabled" eval="True"/>
        </record>

    </data>
</odoo>
