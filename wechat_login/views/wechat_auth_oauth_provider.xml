<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wechat_auth_oauth_provider_form" model="ir.ui.view">
            <field name="name">wechat.auth.oauth.provider.form</field>
            <field name="model">auth.oauth.provider</field>
            <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form"/>
            <field name="arch" type="xml">
                <field name="body" position="after">
                    <field name="app_id"/>
                    <field name="app_secret"/>
                    <field name="update_openid"/>
                </field>
            </field>
        </record>

        <record id="wechat_auth_oauth_provider_tree" model="ir.ui.view">
            <field name="name">wechat.auth.oauth.provider.tree</field>
            <field name="model">auth.oauth.provider</field>
            <field name="inherit_id" ref="auth_oauth.view_oauth_provider_tree"/>
            <field name="arch" type="xml">
                <field name="enabled" position="after">
                    <field name="app_id"/>
                    <field name="app_secret"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
